[Unit]
Description=kubelet: The Kubernetes Node Agent
Documentation=http://kubernetes.io/docs/

#FIXME options for the pod-infra-container

[Service]
ExecStart=/usr/local/bin/kubelet --pod-infra-container-image=kubernetes/pause:latest --pod-manifest-path=/etc/kubernetes/manifests
Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target