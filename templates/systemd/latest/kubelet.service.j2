[Unit]
Description=kubelet: The Kubernetes Node Agent
Documentation=http://kubernetes.io/docs/

[Service]
Environment="KUBELET_FEATURE_ARGS="
Environment="KUBELET_NETWORK_ARGS=--network-plugin=cni --cni-conf-dir=/etc/cni/net.d --cni-bin-dir=/opt/cni/bin"
Environment="KUBELET_DNS_ARGS=--cluster-dns={{ service_cidr | ipaddr('10') | ipv4('address') }} --cluster-domain=cluster.local"
Environment="KUBELET_SYSTEM_PODS_ARGS=--pod-manifest-path=/etc/kubernetes/manifests"
Environment="KUBELET_PRIVILEGED_ARGS={{ kubelet_privileged }}"
Environment="KUBELET_RUNTIME_ARGS={{ kubelet_cri_args }}"

ExecStart=/usr/bin/kubelet --kubeconfig=/etc/kubernetes/kubelet.conf --register-node $KUBELET_PRIVILEGED_ARGS $KUBELET_RUNTIME_ARGS $KUBELET_SYSTEM_PODS_ARGS $KUBELET_DNS_ARGS $KUBELET_NETWORK_ARGS $KUBELET_FEATURE_ARGS
Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target
